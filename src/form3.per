LAYOUT (TEXT="Footer",MINWIDTH=60)
GRID
{
[footer                          |sp|logo      ]
[                                |  |date      ]
}
END -- GRID

ATTRIBUTES
LABEL footer = FORMONLY.footer, SIZEPOLICY=FIXED,STYLE="footer";

IMAGE sp : spacer1, IMAGE="fa-fw", STRETCH=X, STYLE="noborder";

IMAGE logo : logo, IMAGE="logo", STYLE="noborder right",STRETCH=X, SIZEPOLICY=FIXED, AUTOSCALE;
LABEL date = FORMONLY.date,STYLE="noborder right", JUSTIFY=RIGHT;
